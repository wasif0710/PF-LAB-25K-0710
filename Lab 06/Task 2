#include<stdio.h>

int main(){
	
	int num1, num2;
	int multiplication;
	int division=0;
	int i;
	printf("Enter first number");
	scanf("%d", &num1);
	
	printf("Enter second number\n");
	scanf("%d", &num2);
	
	for(i=1;i<=num2;i++){
		multiplication+=num1;
	}
	printf("Product is %d\n", multiplication);
	
	if(num2==0){
		printf("Divided by zero");
	}
	else{
		while(num1>0){
			num1-=num2;
			division+=1;
		}
		if(num1!=0){
			printf("Num cannot be divided");
		}
		else{
			printf("%d",division);
		}
	}
		
	
	return 0;
	
}
