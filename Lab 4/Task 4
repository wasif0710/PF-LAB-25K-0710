#include <stdio.h>

int main() {
    int totalCost = 15;
    int choice;
    int crustCost = 0;

    printf("Choose a crust type:\n");
    printf("1. Regular crust ($0)\n");
    printf("2. Thin crust ($1)\n");
    printf("3. Stuffed crust ($2)\n");
    
    printf("Enter the number for your crust choice: ");
    scanf("%d", &choice);
    
    
    if (choice == 1) {
        crustCost = 0;
    } else if (choice == 2) {
        crustCost = 1;
    } else if (choice == 3) {
        crustCost = 2;
    } else {
        printf("Invalid choice.\n");
        crustCost = 0;
    }
    
    
    totalCost += crustCost;
    printf("New total cost: $%d\n", totalCost);

    return 0;
}


