#include <stdio.h>

int main() {
    int choice;

    printf("Choose a pizza size:\n");
    printf("1. Small\n");
    printf("2. Medium\n");
    printf("3. Large\n");
    printf("Enter your choice: ");
    scanf("%d", &choice);

    if (choice == 1) {
        printf("You chose Small.\n");
    } else if (choice == 2) {
        printf("You chose Medium.\n");
    } else if (choice == 3) {
        printf("You chose Large.\n");
    } else {
        printf("Invalid size.\n");
    }

    return 0;
}
