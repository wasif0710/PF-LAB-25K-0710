#include <stdio.h>

int main() {
    int sizeChoice, numberOfPizzas, crustChoice, time, deliveryOption;
    char extraCheese, studentStatus;
    float totalCost = 0.0;

    printf("Choose pizza size:\n");
    printf("1. Small\n2. Medium\n3. Large\n");
    printf("Enter your choice (1-3): ");
    scanf("%d", &sizeChoice);

    if (sizeChoice == 1) {
        printf("You chose Small.\n");
    } else if (sizeChoice == 2) {
        printf("You chose Medium.\n");
    } else if (sizeChoice == 3) {
        printf("You chose Large.\n");
    } else {
        printf("Invalid size.\n");
        return 0;
    }

    printf("How many pizzas would you like (1, 2, or 3)? ");
    scanf("%d", &numberOfPizzas);

    if (numberOfPizzas == 1) {
        totalCost = 8.0;
        printf("Your total is $8.\n");
    } else if (numberOfPizzas == 2) {
        totalCost = 15.0;
        printf("Check our multi-pizza deals.\n");
    } else if (numberOfPizzas == 3) {
        totalCost = 21.0;
        printf("Check our multi-pizza deals.\n");
    } else {
        printf("Invalid number of pizzas.\n");
        return 0;
    }

    printf("Choose crust type:\n");
    printf("1. Regular crust ($0)\n2. Thin crust ($1)\n3. Stuffed crust ($2)\n");
    printf("Enter your choice (1-3): ");
    scanf("%d", &crustChoice);

    if (crustChoice == 2) {
        totalCost += 1.0;
    } else if (crustChoice == 3) {
        totalCost += 2.0;
    } else if (crustChoice != 1) {
        printf("Invalid crust type.\n");
        return 0;
    }

    printf("Total after crust: $%.2f\n", totalCost);

    printf("Do you want extra cheese? (Y/N): ");
    scanf(" %c", &extraCheese);

    if (extraCheese == 'Y') {
        totalCost += 1.50;
    }

    printf("Enter current time (0-23): ");
    scanf("%d", &time);

    if (time >= 11 && time <= 14) {
        totalCost *= 0.90;
        printf("Time discount applied (10%% off).\n");
    }

    printf("Do you have a student ID? (Y/N): ");
    scanf(" %c", &studentStatus);

    if (studentStatus == 'Y') {
        totalCost -= 2.00;
        printf("Student discount applied.\n");
    }

    if (numberOfPizzas == 3 && crustChoice == 3) {
        printf("You get free garlic bread!\n");
    }

    printf("Delivery or Pickup?\n1. Pickup\n2. Delivery ($3 extra)\n");
    printf("Enter your choice (1 or 2): ");
    scanf("%d", &deliveryOption);

    if (deliveryOption == 2) {
        totalCost += 3.00;
        printf("Delivery charge added.\n");
    }

    printf("\n========= ORDER RECEIPT =========\n");

    if (sizeChoice == 1) printf("Pizza Size: Small\n");
    else if (sizeChoice == 2) printf("Pizza Size: Medium\n");
    else if (sizeChoice == 3) printf("Pizza Size: Large\n");

    printf("Number of Pizzas: %d\n", numberOfPizzas);

    if (crustChoice == 1) printf("Crust Type: Regular\n");
    else if (crustChoice == 2) printf("Crust Type: Thin (+$1)\n");
    else if (crustChoice == 3) printf("Crust Type: Stuffed (+$2)\n");

    if (extraCheese == 'Y') printf("Extra Cheese: Yes (+$1.50)\n");
    else printf("Extra Cheese: No\n");

    if (time >= 11 && time <= 14) printf("Time Discount: Applied (10%% Off)\n");
    if (studentStatus == 'Y') printf("Student Discount: Applied (-$2.00)\n");

    if (deliveryOption == 2) printf("Delivery: Yes (+$3)\n");
    else printf("Delivery: No (Pickup)\n");

    if (numberOfPizzas == 3 && crustChoice == 3) printf("Free Item: Garlic Bread \n");

    printf("----------------------------------\n");
    printf("Final Total: $%.2f\n", totalCost);
    printf("Thank you for your order!\n");
    printf("==================================\n");

    return 0;
}
