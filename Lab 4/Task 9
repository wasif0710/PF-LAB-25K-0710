#include <stdio.h>

int main() {
    float totalCost = 16.5;  
    int deliveryOption;

    printf("Choose an option:\n");
    printf("1. Pickup\n");
    printf("2. Delivery ($3 extra)\n");
    printf("Enter your choice (1 or 2): ");
    scanf("%d", &deliveryOption);

    
    if (deliveryOption == 2) {
        totalCost += 3.00;
        printf("Delivery charge added.\n");
    }

    
    printf("Final total cost: $%f\n", totalCost);

    return 0;
}
